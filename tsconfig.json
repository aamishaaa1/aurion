{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@aurion/agent": ["./agent/src"],
      "@aurion/knowledge": ["./knowledge/src"],
      "@aurion/trust": ["./trust/src"],
      "@aurion/dkg": ["./dkg/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
